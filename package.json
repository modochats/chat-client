{
  "name": "@modochats/chat-client",
  "version": "0.2.3",
  "description": "TypeScript SDK for Modo Chat Agent - Real-time communication with AI",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && node commands/build.mjs && npm run build:types",
    "build:watch": "npm run clean && node commands/build.mjs --watch && npm run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --declarationMap --outDir dist/types",
    "clean": "npx rimraf dist",
    "prepublishOnly": "npm run build",
    "type-check": "tsc --noEmit",
    "dev": "concurrently \"npm run build:watch\" \"npm run start\"",
    "start": "live-server --host=0.0.0.0 --port=6996 --open=/dev/index.html"
  },
  "keywords": [
    "modo",
    "chat",
    "ai",
    "chatbot",
    "websocket",
    "real-time"
  ],
  "author": "Modo Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/modochats/chat-client"
  },
  "bugs": {
    "url": "https://github.com/modochats/chat-client/issues"
  },
  "homepage": "https://github.com/modochats/chat-client#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.12",
    "live-server": "^1.2.2",
    "rimraf": "^6.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "ofetch": "^1.5.1"
  }
}
